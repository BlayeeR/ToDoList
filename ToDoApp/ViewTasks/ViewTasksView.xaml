<UserControl x:Class="ToDoApp.ViewTasks.ViewTasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:first="clr-namespace:ToDoApp.ViewTasks"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="600"
             mc:Ignorable="d">
    <Grid>
        <ListView Name="TaskListBox" Margin="10,13" Grid.Column="1" SelectionMode="Single" HorizontalContentAlignment="Stretch">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Opis" Width="455"/>
                    <GridViewColumn Width="100" Header="Wykonano"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>