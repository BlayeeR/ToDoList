<UserControl x:Class="ToDoApp.EditTask.EditTaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ToDoApp.EditTask"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="600"
             mc:Ignorable="d">
    <Grid>
        <Label Content="Nazwa zadania:" HorizontalContentAlignment="Left" Margin="10,8,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130"/>
        <TextBox Text="{Binding EditTaskModel.EditedTask.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" Margin="10,39,10,0" TextAlignment="Left" Height="26"/>
        <Label Content="Opis:" VerticalAlignment="Top" HorizontalContentAlignment="Left" Margin="10,70,0,0" HorizontalAlignment="Left" Width="100"/>
        <TextBox TextWrapping="Wrap" Text="{Binding EditTaskModel.EditedTask.Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,101,10,13"/>
    </Grid>
</UserControl>